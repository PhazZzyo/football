<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%=  'Home team: ' %>
    <%= select(:match, :home_team_id, Team.all.collect {|team| [ team.name, team.id ] }, { include_blank: false }, {class: "form-select"}) %>
  </div>

  <br>
  
  <div class="field mb-3">
    <%=  'Visitor team: ' %>
    <%= select(:match, :visitor_team_id, Team.all.collect {|team| [ team.name, team.id ] }, { include_blank: false }, {class: "form-select"}) %>
  </div>

  <br>

  <div class="field mb-3">
  <%=  'Date: ' %>
  <%= date_field(:match, :date, {class: "form-select"}) %>
  </div>

  <div>
    <%= form.submit class:'btn btn-secondary' %>    
  </div>
<% end %>
